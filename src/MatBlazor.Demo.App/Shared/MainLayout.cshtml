@inherits BlazorLayoutComponent

@using MatBlazor.Components.MatAppBar
@addTagHelper *,MatBlazor


<MatAppBar Fixed="true">
    <MatAppBarRow>
        <MatAppBarSection>
            <MatIconButton Icon="menu"></MatIconButton>
            <MatAppBarTitle>MatBlazor - Material Design components for Blazor</MatAppBarTitle>
        </MatAppBarSection>
        <MatAppBarSection Align="MatAppBarSectionAlign.End">
            <MatIconButton HRef="http://samprof.com" Target="_blank" Title="Author SamProf">
                <i class="fa fa-user-circle" aria-hidden="true"></i>
            </MatIconButton>
            <MatIconButton HRef="https://github.com/BlazorComponents/MatBlazor" Title="MatBlazor GitHub">
                <i class="fa fa-github" aria-hidden="true"></i>
            </MatIconButton>
        </MatAppBarSection>
    </MatAppBarRow>
</MatAppBar>







<div class="sidebar" style="padding-top: 64px;">
    <NavMenu/>
</div>

<div class="main" style="padding-top: 64px;">

    <div class="content px-4">
        @Body
    </div>
</div>


