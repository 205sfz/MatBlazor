<h3 class="mat-h3">MatIcon</h3>

<p class="mat-body1">
    MatIcon makes it easier to use vector-based icons in your app.
</p>

<h5 class="mat-h5">Use Examples</h5>

<DemoContainer>
    <Content>
        @using MatBlazor.Models

        <MatIcon Icon="favorite"></MatIcon>
        <MatIcon Icon="@MatIconNames.Image"></MatIcon>
        <MatIcon Icon="@MatIconNames._3d_rotation"></MatIcon>

        <MatIcon>work</MatIcon>
        <MatIcon>@MatIconNames.Assistant</MatIcon>
    </Content>
    <SourceContent>
    	<BlazorFiddle Template="MatBlazor" Code=@(@"
        @using MatBlazor.Models

        <MatIcon Icon=""favorite""></MatIcon>
        <MatIcon Icon=""@MatIconNames.Image""></MatIcon>
        <MatIcon Icon=""@MatIconNames._3d_rotation""></MatIcon>

        <MatIcon>work</MatIcon>
        <MatIcon>@MatIconNames.Assistant</MatIcon>
    ")></BlazorFiddle>
    </SourceContent>
</DemoContainer>


<h5 class="mat-h5">All material icons for MatBlazor</h5>

@foreach (var cat in MatIconCategories.Data)
{
    <h4>@cat.Name</h4>
    <div style="display: flex; flex-direction: row; width: 100%; max-width: 100%; flex-wrap: wrap;">

        @foreach (var icon in cat.Icons)
        {
            <div style="width: 250px; height: 80px; text-align: center;">
                <div>
                    <MatIcon Icon="@icon.Id"></MatIcon>
                </div>
                <div>@icon.Id</div>
            </div>
        }
    </div>
}