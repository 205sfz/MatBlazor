<h1>MatList</h1>

<h3>
    Basic Usage
</h3>
<DemoContainer>
    <Content>
        <MatList>
            <MatListItem>
                Item 1
            </MatListItem>
            <MatListItem>
                Item 2
            </MatListItem>
            <MatListItem>
                Item 3
            </MatListItem>
        </MatList>
    </Content>
    <SourceContent>
    	<BlazorFiddle Template="MatBlazor" Code=@(@"
        <MatList>
            <MatListItem>
                Item 1
            </MatListItem>
