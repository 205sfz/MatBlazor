            };

        }

    ")></BlazorFiddle>
    </SourceContent>
</DemoContainer>


<MatH5>Example MatSelectItem with array</MatH5>

<DemoContainer>
    <Content>
        <MatSelectItem @bind-Value="value3" Items="@value3Items">
            <ItemTemplate>
                @context?.Name
            </ItemTemplate>
        </MatSelectItem>

        <span>@(value3?.Name)</span>

        @code
        {
            ItemType value3;


            ItemType[] value3Items = new[]
            {
                new ItemType(""),
                new ItemType("Grains"),
                new ItemType("Vegetables"),
                new ItemType("Fruit"),
            };

            class ItemType
            {
                public string Name { get; }

                public ItemType(string name)
                {
                    Name = name;
                }
            }

        }

    </Content>
    <SourceContent>
    	<BlazorFiddle Template="MatBlazor" Code=@(@"
