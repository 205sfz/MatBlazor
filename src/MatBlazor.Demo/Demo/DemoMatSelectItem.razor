<MatH5>Example MatSelectItem with simple array</MatH5>

<DemoContainer>
    <Content>
        <p>
            <MatSelectItem @bind-Value="@value1" Items="@vlaue1Items"></MatSelectItem>
        </p>
        <p>
            Selected value: @value1
        </p>


        @code
        {
            string value1 = "Grains";

            string[] vlaue1Items = new[]
            {
                "Grains",
                "Vegetables",
                "Fruit",
            };

        }

    </Content>
