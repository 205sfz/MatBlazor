<h1>MatSlideToggle</h1>


<h4>Basic Usage</h4>
<p>
    <DemoContainer>
        <Content>
            <MatSlideToggle bind-Checked="@Val1"></MatSlideToggle> <span>@Val1</span>

            @functions
            {

                public bool Val1
                {
                    get => _val1;
                    set
                    {
                        _val1 = value;
                        this.StateHasChanged();
                    }
                }

                private bool _val1;
            }

        </Content>
        <SourceContent>
        	<BlazorFiddle Template="MatBlazor" Code=@(@"
            <MatSlideToggle bind-Checked=""@Val1""></MatSlideToggle> <span>@Val1</span>

            @functions
            {

                public bool Val1
                {
                    get => _val1;
                    set
                    {
                        _val1 = value;
                        this.StateHasChanged();
                    }
                }

                private bool _val1;
            }

        ")></BlazorFiddle>
        </SourceContent>
</DemoContainer>
</p>

