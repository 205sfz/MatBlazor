@using MatBlazor.Components.MatButton
@addTagHelper *,MatBlazor

<h1>MatTextField</h1>

<p>
    <h4>Simple</h4>
    <MatTextField bind-Value="@MyString"></MatTextField>
</p>

<p>
    <h4>Label</h4>
    <MatTextField Label="Test Label" bind-Value="@MyString"></MatTextField>
</p>

<p>
    <h4>PlaceHolder</h4>
    <MatTextField PlaceHolder="Test PlaceHolder" bind-Value="@MyString"></MatTextField>
</p>


<p>
    <h4>Required</h4>
    <MatTextField Required="true" bind-Value="@MyString"></MatTextField>
</p>


<p>
    <h4>FullWidth</h4>
    <MatTextField FullWidth="true" bind-Value="@MyString"></MatTextField>
</p>


<p>
    <h4>Disabled</h4>
    <MatTextField Disabled="true" bind-Value="@MyString"></MatTextField>
</p>

<p>
    <h4>Outlined</h4>
    <MatTextField Outlined="true" bind-Value="@MyString"></MatTextField>
</p>

<p>
    <h4>Icon</h4>
    <MatTextField Icon="favorite" bind-Value="@MyString"></MatTextField>
</p>

<p>
    <h4>Bind Test: @MyString</h4>
    <MatTextField bind-Value="@MyString"></MatTextField>
</p>

@functions
{

    public string MyString
    {
        get => _myString;
        set
        {
            _myString = value;
            this.StateHasChanged();
        }
    }


    private string _myString = "Test";
}
