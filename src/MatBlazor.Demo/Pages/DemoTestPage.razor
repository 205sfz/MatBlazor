@page "/Test"
@using Microsoft.AspNetCore.Components
@inject IJSRuntime JsRuntime;
@inject IComponentContext ComponentContext


<MatButton OnClick="@(_=>Test1())"></MatButton>


@functions
{



    protected EventCallback callback;

    public void Test1()
    {

        Console.WriteLine("Test1");
        callback = EventCallback.Factory.Create(this, () =>
        {
            Console.WriteLine("Inside callback");
        });
        if (ComponentContext.IsConnected)
        {
            JsRuntime.InvokeAsync<object>("matBlazorDemo.test", callback);
        }
    }


}
