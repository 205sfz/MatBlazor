@namespace MatBlazor
@typeparam TItem
@inherits BaseMatDataTable<TItem>


<div class="@ClassMapper.AsString()" style="@StyleMapper.AsString()" @ref="@Ref" id="@Id" @attributes="@Attributes">
    <table class="mdc-data-table__table" style="@VirtualScrollHelper.GetContentStyle(PreparedItems())">
        <MatDataTableHeader Style="@VirtualScrollHelper.GetContentStyle(PreparedItems(), -1)">
            <CascadingValue Value="@MatDataTableRenderMode.Header">
                @Columns(default(TItem))
            </CascadingValue>
        </MatDataTableHeader>

        <MatDataTableContent>
            <CascadingValue Value="@MatDataTableRenderMode.Row">
                @foreach (var item in VirtualScrollHelper.GetContentItems(PreparedItems()))
                {
                    <MatDataTableRow>
                        @Columns(item)
                    </MatDataTableRow>
                }
            </CascadingValue>
        </MatDataTableContent>
    </table>
    <div class="mat-virtual-scroll-spacer" style="@(VirtualScrollHelper.GetScrollSpacerStyle(PreparedItems()))"></div>
</div>