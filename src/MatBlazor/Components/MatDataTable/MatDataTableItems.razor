@namespace MatBlazor
@typeparam TItem
@inherits BaseMatDataTableItems<TItem>


<MatDataTableHeader>
    <CascadingValue Value="@MatDataTableRenderMode.Header">
        @Columns(default(TItem))
    </CascadingValue>
</MatDataTableHeader>


<CascadingValue Value="@MatDataTableRenderMode.Row">
    <MatDataTableContent>
        @foreach (var item in PreparedItems())
        {
            <MatDataTableRow>
                @Columns(item)
            </MatDataTableRow>
        }

    </MatDataTableContent>
</CascadingValue>

