@namespace MatBlazor
@inherits BaseMatDatePicker


<MatTextFieldView
    RefBack="@TextViewForwardRef"
    Class="@($"{Class} {FieldClass}")"
    Style="@Style"
    Icon="@MatIconNames.Calendar_today"
    IconTrailing="true"
    Label="@Label"
    Dense="@Dense"
    HelperText="@HelperText"
    Outlined="@Outlined"
    FullWidth="@FullWidth"
    PlaceHolder="@PlaceHolder"
    Required="@Required"
    Disabled="@Disabled"
    ReadOnly="@ReadOnly"
    Attributes="@Attributes"
    Id="@Id"
    @ref="TextFieldRef"
    IconOnClick="OnClickIconHandler"
    Value="@ValueAsString"
    ValueChanged="@InputValueChangedHandler">
    <AfterInputTemplate>
        <input @ref="flatpickrInput" style="display: none;"/>
    </AfterInputTemplate>
</MatTextFieldView>