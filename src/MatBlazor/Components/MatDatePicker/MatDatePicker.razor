@namespace MatBlazor
@inherits BaseMatDatePicker


<MatTextFieldView
    RefBack="@TextViewForwardRef"
    Class="@($"{Class} {FieldClass}")"
    Style="@Style"
    Label="@Label"
    Dense="@Dense"
    HelperText="@HelperText"
    Outlined="@Outlined"
    FullWidth="@FullWidth"
    PlaceHolder="@PlaceHolder"
    Required="@Required"
    Disabled="@Disabled"
    ReadOnly="@ReadOnly"
    Attributes="@Attributes"
    Id="@Id"
    @ref="TextFieldRef"
    Value="@ValueAsString"
    ValueChanged="@InputValueChangedHandler">
    <div style="position: absolute; right: 3px; display: flex; flex-direction: row; align-items: center; justify-content: center; height: 100%;">
        <input @ref="flatpickrInput" style="display: none;" />
        <MatIconButton Icon="@MatIconNames.Calendar_today" OnClick="OnClickIconHandler"></MatIconButton>
    </div>
        
</MatTextFieldView>