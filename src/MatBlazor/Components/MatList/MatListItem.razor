@namespace MatBlazor
@inherits BaseMatListItem

@if (Href == null || Disabled)
{
    <li class="@ClassMapper.AsString()" @onmousedown="OnMouseDown" @onclick="OnClick" style="@Style" @ref="Ref"  @attributes="Attributes" Id="@Id">
        @ChildContent
    </li>
}
else
{
    <a class="@ClassMapper.AsString()" href="@Href" @onmousedown="OnMouseDown" @onclick="OnClick" style="@Style" @ref="Ref"  @attributes="Attributes" Id="@Id">
        @ChildContent
    </a>
}
