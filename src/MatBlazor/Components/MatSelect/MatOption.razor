@namespace MatBlazor
@inherits BaseMatOption

@if (Parent.Enhanced)
{
    <li data-value="@Value" class="@ClassMapper.Class" style="@GenerateStyle()" @ref="Ref" @ref:suppressField @attributes="Attributes" Id="@Id">
            @ChildContent
        </li>
}
else
{
    <option value="@Value" disabled=@Disabled class="@ClassMapper.Class" style="@GenerateStyle()" @ref="Ref" @ref:suppressField @attributes="Attributes" Id="@Id">
                @ChildContent
            </option>
}