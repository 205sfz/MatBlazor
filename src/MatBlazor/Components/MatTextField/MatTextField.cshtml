@inherits BaseMatTextField

<div class="@ClassMapper.Class" ref="MdcTextFieldRef">
    @if (!FullWidth && Icon != null)
    {
        <i class="material-icons mdc-text-field__icon" tabindex="0">@Icon</i>
    }

    @if (TextArea)
    {
        <textarea placeholder="@PlaceHolder" required=@Required class="@InputClassMapper.Class" id="@MatBlazorId" value="@Value" aria-label="@Label" onchange="@OnChangeHandler" />
    }
    else
    {
        <input type="@Type" placeholder="@PlaceHolder" required=@Required class="@InputClassMapper.Class" id="@MatBlazorId" value="@Value" aria-label="@Label" onchange="@OnChangeHandler"/>
    }




    @if (Label != null)
    {
        <label class="@LabelClassMapper.Class" for="@MatBlazorId">@Label</label>
    }


    @if (!FullWidth && Outlined)
    {
        <div class="mdc-notched-outline">
            <svg>
                <path class="mdc-notched-outline__path"/>
            </svg>
        </div>
        <div class="mdc-notched-outline__idle"></div>
    }
    else
    {
        <div class="mdc-line-ripple"></div>
    }
</div>
@if (HelperText != null)
{
    <p class="mdc-text-field-helper-text" aria-hidden="true">@HelperText</p>
}