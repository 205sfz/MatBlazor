@typeparam ItemType
@namespace MatBlazor
@using System.Linq
@inherits BaseMatVirtualScroll<ItemType>

<div class="@(ClassMapper.AsString())" style="@StyleMapper.AsString()" @ref="@Ref">
    @if (ScrollViewResult != null)
    {
        <div class="mat-virtual-scroll-content" style="height: @(ScrollViewResult.Height)px">

            @foreach (var item in Items.Skip(ScrollViewResult.SkipItems).Take(ScrollViewResult.TakeItems).Select((item, index) => new {item, index}))
            {
                <div style="height: @(ItemHeight)px; top: @((ScrollViewResult.SkipItems + item.index) * ItemHeight)px;" class="mat-virtual-scroll-item">
                    @ChildContent(item.item)
                </div>
            }
        </div>
    }
</div>

